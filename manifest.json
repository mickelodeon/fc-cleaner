{
  "name": "ForoCoches Cleaner",
  "version": "0.1",
  "description": "Clean your unwanted threads from ForoCoches front page",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["src/scripts/background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "src/templates/popup.html",
    "default_icon": {
      "16": "src/images/fc_cleaner16.png",
      "32": "src/images/fc_cleaner32.png",
      "48": "src/images/fc_cleaner48.png",
      "128": "src/images/fc_cleaner128.png"
    }
  },
  "icons": {
    "16": "src/images/fc_cleaner16.png",
    "32": "src/images/fc_cleaner32.png",
    "48": "src/images/fc_cleaner48.png",
    "128": "src/images/fc_cleaner128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.forocoches.com/*"],
      "css": ["src/styles/content.css"],
      "js": ["src/scripts/content.js"]
    }
  ],
  "options_page": "src/templates/options.html",
  "manifest_version": 2
}
